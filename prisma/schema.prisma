generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reserva {
  id                 String           @id @default(uuid())
  nombreCompleto     String
  correo             String
  telefono           String
  documentoIdentidad String?
  fechaReserva       DateTime         @db.Date
  horaReserva        String
  cantidadPersonas   Int
  volantePagoUrl     String
  estadoValidacion   EstadoValidacion @default(PENDIENTE)
  observaciones      String?
  creadoEn           DateTime         @default(now())
  actualizadoEn      DateTime         @updatedAt
  puertoDestino      Puerto
  puertoOrigen       Puerto
}

enum EstadoValidacion {
  PENDIENTE
  VALIDADA
  RECHAZADA
}

enum Puerto {
  LETICIA
  RONDA
  MILAGROSA
  ONVACATION
  CANAN
  SAN_JOSE
  NAZARETH
  PUERTO_ALEGRIA
  ARARA
  ISLA_MICOS
  SANTA_SOFIA
  LOMALINDA
  PRIMAVERA
  TRIUNFO
  LIBERTAD
  ZARAGOZA
  NATURAPARK
  VERGEL
  MACEDONIA
  CALANOA
  MOCAGUA
  PALMERAS
  BOCAS_AMACAYACU
  VALENCIA
  SAN_ANTONIO
  PUERTO_ESPERANZA
  VEINTE_DE_JULIO
  PUERTO_NARINO
  CABALLO_COCHA
  SAN_JUAN_DE_ATACUARI
}
